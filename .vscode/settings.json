{
    // Configurações do Wasabi Viewer
    "files.exclude": {
        "**/node_modules": true,
        "**/dist": true,
        "**/.git": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/dist": true
    },
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "files.encoding": "utf8",
    "files.eol": "\n",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "npm.autoDetect": "on",
    "debug.console.fontSize": 14,
    "debug.console.lineHeight": 20
}
