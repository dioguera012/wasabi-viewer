{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "check-dependencies",
            "type": "shell",
            "command": "npm",
            "args": [
                "install"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "npm-install",
            "type": "shell",
            "command": "npm",
            "args": [
                "install"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "npm-dev",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "dev"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            },
            "problemMatcher": [],
            "isBackground": true
        },
        {
            "label": "npm-start",
            "type": "shell",
            "command": "npm",
            "args": [
                "start"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            },
            "problemMatcher": [],
            "isBackground": true
        }
    ]
