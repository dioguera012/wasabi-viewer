{
  "name": "wasabi-viewer",
  "version": "1.3.1",
  "description": "Aplicativo desktop para visualizar e gerenciar arquivos do Wasabi S3",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "dev-debug": "electron . --dev",
    "build": "electron-builder",
    "generate-ico": "node scripts/generate-ico.js",
    "generate-installer-assets": "node scripts/generate-installer-assets.js",
    "dist": "npm run generate-ico && npm run generate-installer-assets && electron-builder --publish=never && node scripts/post-dist.js"
  },
  "keywords": [
    "electron",
    "wasabi",
    "s3",
    "file-manager"
  ],
  "author": "Equipe de Suporte",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "png-to-ico": "^3.0.1",
    "serve": "^14.2.5",
    "sharp": "^0.34.4"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.436.0",
    "@aws-sdk/s3-request-presigner": "^3.436.0",
    "crypto-js": "^4.2.0"
  },
  "build": {
    "appId": "com.suporte.wasabi-viewer",
    "productName": "Wasabi Viewer",
    "icon": "icone_green_leaf.ico",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "icone_green_leaf.ico"
    ],
    "win": {
      "target": "nsis",
      "icon": "icone_green_leaf.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "installerIcon": "icone_green_leaf.ico",
      "uninstallerIcon": "icone_green_leaf.ico",
      "installerHeaderIcon": "icone_green_leaf.ico",
      "installerSidebar": "assets/nsis-installer-sidebar.bmp",
      "uninstallerSidebar": "assets/nsis-uninstaller-sidebar.bmp",
      "installerHeader": "assets/nsis-installer-header.bmp"
    },
    "buildVersion": "1.3.1"
  }
}
